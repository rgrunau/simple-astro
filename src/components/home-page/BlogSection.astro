---
type HomePageBlogPost = {
  title: string;
  slug: string;
};
interface Props {
  posts: HomePageBlogPost[];
}
const { posts } = Astro.props;
---

<section>
  <h2>Recent Posts</h2>
  <ul>
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.slug}`}>{post.title}</a>
      </li>
    ))}
  </ul>
</section>


<style>
  section {
		margin: 1rem auto;
		padding: 1rem;
		width: 100%;
		max-width: 1200px;
		font-size: 20px;
		line-height: 1.6;
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
	}

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
</style>