---
import LinkCard from './LinkCard.astro';

export const routes = [
  {
    name: "Blog",
    path: "/blog",
  },
  {
    name: "Projects",
    path: "/projects",
  },
  {
    name: "About",
    path: "/about",
  },
  {
    name: "Contact",
    path: "/contact",
  },
];

interface Props {
	title: string;
	subtitle: string;
	tagline: string;
}

const { title, subtitle, tagline } = Astro.props
console.log(tagline)
---


<div class="hero-text">
	<div>
		<h1>{title}</h1>
	</div>
	<div>
		<h2>{subtitle}</h2>
	</div>
	<div>
		<p>{tagline}</p>
	</div>
</div>
<div class="hero-nav">
	{routes.map(route => (
		<LinkCard
			name={route.name}
			path={route.path}
		/>
	))}
</div>

<style>
  .hero-text {
		width: 45%;
		display: flex;
		flex-direction: column;
		align-items: start;
		justify-content: start;
	}

	.hero-text h1 {
		font-size: 4rem;
	}

	.hero-text h2 {
		font-size: 2rem;
		font-weight: 400;
	}

	p {
		font-size: 1.15rem;
		text-align: left;
	}

	.hero-nav {
		width: 40%;
		display: flex;
		flex-flow: wrap row;
		justify-content: space-between;
		align-items: center;
	}

	@media (max-width: 931px) {
		.hero-text {
			width: 100%;
			align-items: center;
			justify-content: center;
		}

		.hero-nav {
			width: 100%;
			margin-top: 1rem;
			justify-content: center;
		}
	}

</style>